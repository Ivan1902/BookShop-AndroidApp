<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:id="@+id/knjigaView"
        android:src="@drawable/ana_karenjina" />

    <TextView
        android:id="@+id/nazivKnjige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/knjigaView"
        android:gravity="center"
        android:text="Ana karenjina"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autorKnjige"
        android:layout_toRightOf="@+id/knjigaView"
        android:layout_below="@+id/nazivKnjige"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="Lav Nikolajevic Tolstoj"
        android:textSize="18sp"
        android:textColor="@color/black"/>


</RelativeLayout>